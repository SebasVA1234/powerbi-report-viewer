# Puerto del servidor
PORT=3000

# Modo (development o production)
NODE_ENV=development

# JWT Secret - CAMBIAR EN PRODUCCIÓN
# Generar con: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
